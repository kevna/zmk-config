// vim: ts=4:sw=4:et

#define MACRO_MORPH(NAME, UNMOD, MOD, MODS) \
mm_##NAME: mm_##NAME { \
    compatible = "zmk,behavior-mod-morph"; \
    label = #NAME; \
    #binding-cells = <0>; \
    bindings = <UNMOD>, <MOD>; \
    mods = <(MODS)>; \
};

behaviour {
    MACRO_MORPH(slash, &kp FSLH, &kp STAR, MOD_LSFT|MOD_RSFT)

    MACRO_MORPH(apars, L_LPAR, &kp RPAR, MOD_LALT)
    MACRO_MORPH(atrig, L_LT, &kp GT, MOD_LALT)
    MACRO_MORPH(abrcs, L_LBRC, &kp RBRC, MOD_LALT)
    MACRO_MORPH(abkts, L_LBKT, &kp RBKT, MOD_LALT)
    MACRO_MORPH(par, &mm_apars, &mm_atrig, MOD_LSFT|MOD_RSFT)
    MACRO_MORPH(brc, &mm_abrcs, &mm_abkts, MOD_LSFT|MOD_RSFT)

    MACRO_MORPH(sqt, &kp APOS, &kp EXCL, MOD_LSFT|MOD_RSFT)
    MACRO_MORPH(dqt, &kp AT, &kp QMARK, MOD_LSFT|MOD_RSFT)
    MACRO_MORPH(minus, &kp MINUS, &kp PLUS, MOD_LSFT|MOD_RSFT)
    MACRO_MORPH(comma, &lt MEDR COMMA, &lt MEDR SEMI, MOD_LSFT|MOD_RSFT)
    MACRO_MORPH(dot, &lt NAVR DOT, &lt NAVR COLON, MOD_LSFT|MOD_RSFT)
};
